{% extends '_layouts/cp' %}

{% import "_includes/forms" as forms %}
{% set title = "What'sRabbit LiveChat"|t('app') %}
{% set fullPageForm = true %}
{% set settings = craft.app.getPlugins().getPlugin('whatsrabbit-live-chat').getSettings() %}

{% block content %}
    {{ actionInput('whatsrabbit-live-chat/settings/save') }}
    {{ forms.textField({
        label: 'API Key'|t('app'),
        id: 'api-key',
        name: 'apiKey',
        value: settings.apiKey,
        inputmode: 'text',
        size: 50,
    }) }}

    {{ forms.textField({
        label: 'API Secret'|t('app'),
        id: 'api-secret',
        name: 'apiSecret',
        value: settings.apiSecret,
        inputmode: 'text',
        size: 50,
    }) }}

    {{ forms.textField({
        label: 'Plugin Repository Domain'|t('app'),
        id: 'plugin-repository-domain',
        name: 'pluginRepositoryDomain',
        value: settings.pluginRepositoryDomain,
        size: 50,
    }) }}

    {{ forms.fileField({
        label: 'Avatar',
        id: 'avatarUrl',
        name: 'avatarUrl',
        value: settings.avatarUrl,
    }) }}

    {{ forms.textField({
        label: 'Title'|t('app'),
        id: 'title',
        name: 'title',
        value: settings.title,
        size: 50,
    }) }}

    {{ forms.textField({
        label: 'Description'|t('app'),
        id: 'description',
        name: 'description',
        value: settings.description,
        size: 50,
    }) }}

    {{ forms.textField({
        label: 'WhatsApp URL'|t('app'),
        id: 'whats-app-url',
        name: 'whatsAppUrl',
        value: settings.whatsAppUrl,
        size: 50,
    }) }}

    {{ forms.textField({
        label: 'Login URL'|t('app'),
        id: 'login-url',
        name: 'loginUrl',
        value: settings.loginUrl,
        size: 50,
    }) }}
{% endblock %}
